<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= @flat.name %></h1>
    <div>
      <%= link_to edit_flat_path(@flat), class: "btn btn-secondary" do %>
        <i class="fas fa-edit"></i> Edit
      <% end %>
      <%= link_to flat_path(@flat), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" do %>
        <i class="fas fa-trash"></i> Delete
      <% end %>
    </div>
  </div>

  <% if @flat.picture_url.present? %>
    <img src="<%= @flat.picture_url %>" class="img-fluid mb-3" alt="<%= @flat.name %>">
  <% end %>

  <p><strong>Address:</strong> <%= @flat.address %></p>
  <p><strong>Description:</strong> <%= @flat.description %></p>
  <p><strong>Price per night:</strong> â‚¬<%= @flat.price_per_night %></p>
  <p><strong>Number of guests:</strong> <%= @flat.number_of_guests %></p>

  <%= link_to flats_path, class: "btn btn-outline-primary" do %>
    <i class="fas fa-arrow-left"></i> Back to all flats
  <% end %>
</div>
